@page
@model CarsWebApp.Pages.Cars.DeleteModel
@{
}
<br>
<h2>Delete Car </h2>

@if (@Model.errorMessage.Length > 0)
{
    <div> @Model.errorMessage</div>
}

<form method="POST">
    <input type="hidden" name="IndexNo" value="@Model.Car.IndexNo" />
<table>
        <tr>
            <td>CarName</td>
            <td>@Model.Car.CarName</td>

            <td>Year</td>
            <td>@Model.Car.Year</td>

            <td>Director</td>
            <td>@Model.Car.Director</td>

            <td>Producer</td>
            <td>@Model.Car.Producer</td>

            <td>CriticScore</td>
            <td>@Model.Car.CriticScore</td>


        </tr>
</table>
<p></p>

<input type="submit" value="Delete" class="btn btn-primary" />
</form>