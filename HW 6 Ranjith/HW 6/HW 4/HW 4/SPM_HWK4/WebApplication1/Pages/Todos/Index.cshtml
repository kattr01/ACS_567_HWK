@page
@model WebApplication1.Pages.Todos.IndexModel
@{
}
<br>
<h2>List of Todos</h2>
<a class='btn btn-primary btn-sm' href='/Todos/Create'>New Todo</a>
<a class='btn btn-primary btn-sm' href='/Todos/Analyse'>Analyse </a>


<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Is Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Todos)
        {
            <tr>
                <td>@item.Description‹/td>
                <td>@item.IsCompleted</td>

                <td>
                    <a class="btn btn-primary btn-sm" href="/Todos/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Todos/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
